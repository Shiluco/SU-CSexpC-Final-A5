# Pin assignments for register.v module
# Add these lines to sep5_top.qsf

# Register module pin assignments
# Clock and Reset
set_location_assignment PIN_Y2 -to CLK
set_location_assignment PIN_M23 -to CLR

# Store Register enables SR[7:0]
set_location_assignment PIN_AB22 -to SR[0]
set_location_assignment PIN_AC15 -to SR[1]
set_location_assignment PIN_AB21 -to SR[2]
set_location_assignment PIN_Y17 -to SR[3]
set_location_assignment PIN_AC21 -to SR[4]
set_location_assignment PIN_Y16 -to SR[5]
set_location_assignment PIN_AD21 -to SR[6]
set_location_assignment PIN_AE16 -to SR[7]

# Store B0 enable
set_location_assignment PIN_AD15 -to SB0

# S_BUS[15:0] - Data input bus (using SW[15:0])
set_location_assignment PIN_AB28 -to s_bus[0]
set_location_assignment PIN_AC28 -to s_bus[1]
set_location_assignment PIN_AC27 -to s_bus[2]
set_location_assignment PIN_AD27 -to s_bus[3]
set_location_assignment PIN_AB27 -to s_bus[4]
set_location_assignment PIN_AC26 -to s_bus[5]
set_location_assignment PIN_AD26 -to s_bus[6]
set_location_assignment PIN_AB26 -to s_bus[7]
set_location_assignment PIN_AC25 -to s_bus[8]
set_location_assignment PIN_AB25 -to s_bus[9]
set_location_assignment PIN_AC24 -to s_bus[10]
set_location_assignment PIN_AB24 -to s_bus[11]
set_location_assignment PIN_AB23 -to s_bus[12]
set_location_assignment PIN_AA24 -to s_bus[13]
set_location_assignment PIN_AA23 -to s_bus[14]
set_location_assignment PIN_AA22 -to s_bus[15]

# Register R0 outputs (to LEDR[15:0])
set_location_assignment PIN_G19 -to r_q[0][0]
set_location_assignment PIN_F19 -to r_q[0][1]
set_location_assignment PIN_E19 -to r_q[0][2]
set_location_assignment PIN_F21 -to r_q[0][3]
set_location_assignment PIN_F18 -to r_q[0][4]
set_location_assignment PIN_E18 -to r_q[0][5]
set_location_assignment PIN_J19 -to r_q[0][6]
set_location_assignment PIN_H19 -to r_q[0][7]
set_location_assignment PIN_J17 -to r_q[0][8]
set_location_assignment PIN_G17 -to r_q[0][9]
set_location_assignment PIN_J15 -to r_q[0][10]
set_location_assignment PIN_H16 -to r_q[0][11]
set_location_assignment PIN_J16 -to r_q[0][12]
set_location_assignment PIN_H17 -to r_q[0][13]
set_location_assignment PIN_F15 -to r_q[0][14]
set_location_assignment PIN_G15 -to r_q[0][15]

# Register R1-R7 outputs (example mapping to HEX displays)
# Note: You need to map all r_q[1] through r_q[7] based on your requirements
# Here's a template for R1 mapped to HEX0-1 (first 8 bits shown)

# B0 outputs (to LEDG[7:0] + more)
set_location_assignment PIN_E21 -to b0_q[0]
set_location_assignment PIN_E22 -to b0_q[1]
set_location_assignment PIN_E25 -to b0_q[2]
set_location_assignment PIN_E24 -to b0_q[3]
set_location_assignment PIN_H21 -to b0_q[4]
set_location_assignment PIN_G20 -to b0_q[5]
set_location_assignment PIN_G22 -to b0_q[6]
set_location_assignment PIN_G21 -to b0_q[7]

# Add register.v to project
set_global_assignment -name VERILOG_FILE src/register.v
